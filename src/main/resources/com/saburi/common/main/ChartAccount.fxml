            <CheckBox fx:id = "chkContra" id = "ChartAccount"  GridPane.rowIndex = "6" GridPane.columnIndex = "1" /> 
            <Label id="ChartAccount" fx:id="lblControlAccount" minWidth="100" text="Control Account" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <CheckBox fx:id = "chkControlAccount" id = "ChartAccount"  GridPane.rowIndex = "7" GridPane.columnIndex = "1" /> 
            <Label id="ChartAccount" fx:id="lblOpeningBalance" minWidth="100" text="Opening Balance" GridPane.columnIndex="0" GridPane.rowIndex="8" />
