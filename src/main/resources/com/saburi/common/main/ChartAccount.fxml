            <ComboBox fx:id = "cboAccountCategory" id = "ChartAccount"  GridPane.rowIndex = "1" GridPane.columnIndex = "1" promptText = "Select Account Category" minWidth="185.0">
                <contextMenu>
                    <ContextMenu fx:id ="cmuSelectAccountCategory" id = "ChartAccount">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiSelectAccountCategory" id = "ChartAccount" text="Select AccountCategory" />
