            <TextField fx:id = "txtClosingBalance" id = "ChartAccount"  GridPane.rowIndex = "9" GridPane.columnIndex = "1" minWidth="100" editable = "false" /> 
            <Label id="ChartAccount" fx:id="lblReadOnly" minWidth="100" text="Read Only" GridPane.columnIndex="0" GridPane.rowIndex="10" />
            <CheckBox fx:id = "chkReadOnly" id = "ChartAccount"  GridPane.rowIndex = "10" GridPane.columnIndex = "1" /> 
            <Label id="ChartAccount" fx:id="lblHidden" minWidth="100" text="Hidden" GridPane.columnIndex="0" GridPane.rowIndex="11" />
            <CheckBox fx:id = "chkHidden" id = "ChartAccount"  GridPane.rowIndex = "11" GridPane.columnIndex = "1" />
        </GridPane>
        <AnchorPane>
            <VBox spacing="2" AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="7.0">
                <Button id="ChartAccount" fx:id="btnSearch"  prefWidth="80.0" text="Search" visible="false" />
                <Button id="ChartAccount" fx:id="btnSave"  prefHeight="25.0" prefWidth="80.0" text="Save" />
            </VBox>
            <VBox spacing="2" AnchorPane.bottomAnchor="27.0" AnchorPane.rightAnchor="7.0">
                <Button id="ChartAccount" fx:id="btnDelete"  prefWidth="80.0" text="Delete" visible="false" />
                <Button id="ChartAccount" fx:id="btnClose"  prefHeight="25.0" prefWidth="80.0" text="Close" />
            </VBox>
        </AnchorPane>
