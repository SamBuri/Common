<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox id="Company" fx:id="mVBox" spacing="2" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saburi.common.controllers.CompanyController">
    <children>

        <GridPane hgap="5" vgap="2">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label id="Company" fx:id="lblCompanyID" minWidth="100" text="Company ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField id="Company" fx:id="txtCompanyID" minWidth="100" promptText="Enter Company ID" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <contextMenu>
                    <ContextMenu id="Company" fx:id="cmuSelectCompanyID">
                        <items>
                            <MenuItem id="Company" fx:id="cmiLoad" mnemonicParsing="false" text="Load" />   
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TextField>  
            <Label id="Company" fx:id="lblCompanyName" minWidth="100" text="Company Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField id="Company" fx:id="txtCompanyName" minWidth="100" promptText="Enter Company Name" GridPane.columnIndex="1" GridPane.rowIndex="1" /> 
            <Label id="Company" fx:id="lblBusinessType" minWidth="100" text="Business Type" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox id="Company" fx:id="cboBusinessType" minWidth="200" prefHeight="26.0" prefWidth="221.0" promptText="Select Business Type" GridPane.columnIndex="1" GridPane.rowIndex="2" /> 
            <Label id="Company" fx:id="lblPhysicalAddress" minWidth="100" text="Physical Address" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField id="Company" fx:id="txtPhysicalAddress" minWidth="100" promptText="Enter Physical Address" GridPane.columnIndex="1" GridPane.rowIndex="3" /> 
            <Label id="Company" fx:id="lblPhone" minWidth="100" text="Phone" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField id="Company" fx:id="txtPhone" minWidth="100" promptText="Enter Phone" GridPane.columnIndex="1" GridPane.rowIndex="4" /> 
            <Label id="Company" fx:id="lblEmail" minWidth="100" text="Email" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField id="Company" fx:id="txtEmail" minWidth="100" promptText="Enter Email" GridPane.columnIndex="1" GridPane.rowIndex="5" /> 
            <Label id="Company" fx:id="lblWebSite" minWidth="100" text="Web Site" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField id="Company" fx:id="txtWebSite" minWidth="100" promptText="Enter Web Site" GridPane.columnIndex="1" GridPane.rowIndex="6" /> 
            <Label id="Company" fx:id="lblTagLine" minWidth="100" text="Tag Line" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField id="Company" fx:id="txtTagLine" minWidth="100" promptText="Enter Tag Line" GridPane.columnIndex="1" GridPane.rowIndex="7" /> 
            <Label id="Company" fx:id="lblLogo" minWidth="100" text="Logo" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <HBox id="Company" fx:id="hbxLogo" alignment="center" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
               
                <VBox id="Company" fx:id="vbxLogo" alignment="center" prefHeight="150.0" prefWidth="150.0" styleClass="image-pane">
                    <ImageView id="Company" fx:id="imvLogo" fitHeight="150" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 45;" />
                
                </VBox>
                <VBox alignment="center" spacing="10">
                    <Button id="Company" fx:id="btnBrowseLogo" minWidth="60" text="Browse" /> 
                    <Button id="Company" fx:id="btnCaptureLogo" minWidth="60" text="Capture" />
                    <Button id="Company" fx:id="btnClearLogo" minWidth="60" text="Clear" /> 
                </VBox>
            </HBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <AnchorPane>
            <VBox spacing="2" AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="7.0">
                <Button id="Company" fx:id="btnSearch" prefWidth="80.0" text="Search" visible="false" />
                <Button id="Company" fx:id="btnSave" prefHeight="25.0" prefWidth="80.0" text="Save" />
            </VBox>
            <VBox spacing="2" AnchorPane.bottomAnchor="27.0" AnchorPane.rightAnchor="7.0">
                <Button id="Company" fx:id="btnDelete" prefWidth="80.0" text="Delete" visible="false" />
                <Button id="Company" fx:id="btnClose" prefHeight="25.0" prefWidth="80.0" text="Close" />
            </VBox>
        </AnchorPane>
    </children>

</VBox>
